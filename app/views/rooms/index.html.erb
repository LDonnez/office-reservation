<div class="container">
  <% if notice %>
    <div class="alert alert-success">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>
  <div class="table-responsive">
    <h1>Rooms</h1>
    <%= link_to 'New Room', new_room_path, class: "btn btn-primary" %>
    <table class='table table-striped'>
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= room.name %></td>
            <td class="text-right"> <%= link_to 'Edit', edit_room_path(room), class: "btn btn-primary" %> <%= link_to 'Destroy', room, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

